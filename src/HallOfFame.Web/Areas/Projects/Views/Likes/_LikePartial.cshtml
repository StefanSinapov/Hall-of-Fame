@model HallOfFame.Web.Areas.Projects.ViewModels.LikeViewModel
@{
    var ajaxOpts = new AjaxOptions
                   {
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "Post",
                       UpdateTargetId = "likes-container"
                   };
}

<style>
    .likes-holder {
    }

        .likes-holder .thanks {
            width: 100px;
            height: 100px;
            border: 0;
            background: url("../../../../Img/project-icons.png") no-repeat -207px -3px;
        }

        .likes-holder .like {
            width: 100px;
            height: 100px;
            border: 0;
            background: url("../../../../Img/project-icons.png") no-repeat -105px -3px;
        }

            .likes-holder .like:hover {
                background: url("../../../../Img/project-icons.png") no-repeat -3px -3px;
            }

            .likes-holder .like a {
                width: 100%;
                height: 100%;
            }
</style>

<div class="likes-holder text-center">
    @if (Model.Value == false)
    {
        using (@Ajax.BeginForm("Like", ajaxOpts))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.ProjectId)
            @Html.HiddenFor(m => m.Value)
            <input type="submit" class="like" value="" />
        }
    }
    else if (Model.Value == true)
    {
        using (@Ajax.BeginForm("Unlike", ajaxOpts))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.ProjectId)
            @Html.HiddenFor(m => m.Value)
            <input type="submit" class="thanks" value="" />
        }
    }
</div>