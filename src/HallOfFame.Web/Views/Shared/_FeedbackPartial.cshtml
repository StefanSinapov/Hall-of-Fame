@model HallOfFame.Web.ViewModels.Feedback.FeedbackViewModel

@using (@Html.BeginForm("Index", "Feedback", FormMethod.Post, new { @class=""}))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.EditorFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Message, new { @class = "form-control", PlaceHolder="Hello" })
    </div>
    
    <button type="submit" class="btn btn-sm btn-primary">Send</button>
}