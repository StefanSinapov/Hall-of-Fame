@using System.ServiceModel.Security
@using HallOfFame.Web.Common
@using Microsoft.AspNet.Identity
@using Mvc.RazorTools.FontAwesome
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(User.Identity.GetUserName(), ControllerNames.Index, "Profile", new { area = "Users", }, new { title = "Profile"})
            </li>
            <li>
                <a href="@Url.Action(ControllerNames.Index, "Settings", new { area = "Users"})" title="Settings">
                    @Html.FontAwesome("fa fa-gear")
                </a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()" title="Sing out">
                    @Html.FontAwesome("fa fa-sign-out")
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
