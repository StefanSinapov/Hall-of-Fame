@model IList<HallOfFame.Web.Areas.Projects.ViewModels.ProjectInfoViewModel>
<ul class="timeline">
    @for (int i = 0; i < @Model.Count(); i++)
    {
        if (i % 2 == 0)
        {
            <li class="odd">
                @Html.Partial("_ProjectInfoPartial", @Model[i])
            </li>
        }
        else
        {
            <li class="even">
                @Html.Partial("_ProjectInfoPartial", @Model[i])
            </li>
        }
    }
</ul>